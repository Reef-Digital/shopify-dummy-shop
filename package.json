{
  "name": "my-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/lib/search-widget.external.cjs.js",
  "module": "./dist/lib/search-widget.external.es.js",
  "exports": {
    ".": {
      "import": "./dist/lib/search-widget.external.es.js",
      "require": "./dist/lib/search-widget.external.cjs.js"
    },
    "./standalone": {
      "import": "./dist/lib/search-widget.standalone.es.js",
      "require": "./dist/lib/search-widget.standalone.cjs.js"
    }
  },
  "files": [
    "dist/lib"
  ],
  "keywords": [
    "search",
    "widget",
    "react",
    "component",
    "library",
    "embed"
  ],
  "scripts": {
    "dev": "vite",
    "build:app": "vite build",
    "build:lib": "vite build --mode library",
    "build:lib:external": "vite build --mode library-external",
    "build:lib:all": "npm run build:lib && npm run build:lib:external",
    "build": "npm run build:app && npm run build:lib:all",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "terser": "^5.36.0",
    "vite": "^6.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-svgr": "^4.3.0"
  }
}
